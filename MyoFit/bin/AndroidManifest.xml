<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.bran.android">

    <uses-sdk android:minSdkVersion="19" android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

	<uses-permission android:name="android.permission.INTERNET"/>
    
    
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.bran.android.MyoFitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_workout_select" android:name="com.bran.android.WorkoutSelectActivity">
        </activity>
        <activity android:label="@string/title_activity_exercise" android:name="com.bran.android.ExerciseActivity">
        </activity>

        <activity android:label="@string/myosdk__title_activity_scan" android:name="com.thalmic.myo.scanner.ScanActivity" android:theme="@style/myosdk__ScanActivityTheme"/>
    </application>

</manifest>
